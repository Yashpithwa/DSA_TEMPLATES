public class BinaryToDecimal {

    public static int toDecimal(String binary) {
        int result = 0;
        int power = 0;

        for (int i = binary.length() - 1; i >= 0; i--) {
            if (binary.charAt(i) == '1') {
                result += (1 << power);
            }
            power++;
        }
        return result;
    }

    public static void main(String[] args) {
        System.out.println(toDecimal("1010")); // 10
    }
}
